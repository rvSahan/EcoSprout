<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home"
    >
    <action
        android:id="@+id/action_homeFragment_to_productsFragment"
        app:destination="@id/navigation_products" />


    <fragment
        android:id="@+id/navigation_home"
        android:name="lk.javainstitute.ecosprout.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_cart"
        android:name="lk.javainstitute.ecosprout.ui.cart.CartFragment"
        android:label="Cart"
        tools:layout="@layout/fragment_cart" />

    <fragment
        android:id="@+id/navigation_products"
        android:name="lk.javainstitute.ecosprout.ui.products.ProductsFragment"
        android:label="Products"
        tools:layout="@layout/fragment_products" />
    <fragment
        android:id="@+id/navigation_profilr"
        android:name="lk.javainstitute.ecosprout.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/navigation_orders"
        android:name="lk.javainstitute.ecosprout.OrderFragment"
        android:label="Orders"
        tools:layout="@layout/fragment_order" />
</navigation>